{
  "name": "ksqldb-js",
  "version": "0.0.1",
  "author": {
    "name": "Rohan Krishnaswamy",
    "url": "https://rohank.me"
  },
  "description": "ksqlDB client for NodeJS",
  "repository": {
    "url": "https://github.com/rkrishn7/ksqldb-js"
  },
  "main": "./cjs",
  "types": "./types",
  "engines": {
    "node": "^16"
  },
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --project tsconfig.build.cjs.json",
    "build:types": "tsc --project tsconfig.build.types.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check:files": "eslint",
    "release": "semantic-release",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.4.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "28.1.4",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.2",
    "jest-mock": "^28.1.3",
    "prettier": "^2.3.2",
    "semantic-release": "^19.0.3",
    "source-map-support": "^0.5.20",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    }
  }
}
